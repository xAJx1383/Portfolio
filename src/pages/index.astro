---
import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';
import ProjectGrid from '../components/ProjectGrid.jsx';

// Fetch projects and filter out drafts in production
const projects = await getCollection('projects', ({ data }) => 
  import.meta.env.PROD ? data.draft !== true : true
);

// Sort projects by defined order, then alphabetically by title
projects.sort((a, b) => (a.data.order - b.data.order) || a.data.title.localeCompare(b.data.title));
---

<Layout title="AJ | Systems & Intelligence Engineer">
  
  <!-- HERO SECTION -->
  <section class="hero-section">
    <div class="hero-content">
      <div class="pill-badge">
        <span class="pulse-dot"></span> Passion is The Key
      </div>
      <h1>
        Engineering <br />
        <span class="text-gradient">High-Performance Intelligence</span>
      </h1>
      <p class="subtitle">
        Specializing in C++ systems engineering, Machine Learning, and high-integrity code. 
        I build robust architectures that bridge low-level performance with modern intelligence.
      </p>
        
      <div class="hero-actions">
        <a href="#work" class="btn primary">View Systems</a>
        <a href="#contact" class="btn secondary">Get in Touch</a>
      </div>
    </div>
  </section>

  <!-- WORK SECTION -->
  <section id="work" class="section-container">
